{
    "id": "1E78DC1B-9132-4B18-9C75-0E7ECC634B74",
    "name": "Xcode",
    "friendlyName": "Xcode Build",
    "description": "Build an Xcode project with xcodebuild tool",
    "category": "Build",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0,
        "IsTest": false
    },
    "demands" : [
        "xcode"
    ],
    "instanceNameFormat": "Xcode $(xcWorkspacePath)",
    "inputs": [
        { "name": "xcWorkspacePath", "type": "filePath", "label": "Workspace Path", "defaultValue":"$(sys.sourceFolder)/src/myproject.xcodeproject/project.xcworkspace", "required":true },
        { "name": "scheme", "type": "string", "label": "Scheme", "defaultValue":"", "required":true },
        { "name": "xcodeApp", "type": "string", "label": "Xcode App", "defaultValue":"$(XcodeApp)", "required":true },
        { "name": "configuration", "type": "string", "label": "Configuration", "defaultValue":"$(Configuration)", "required":true },
        { "name": "sdk", "type": "string", "label": "SDK", "defaultValue":"$(SDK)", "required":true },
        { "name": "clean", "type": "boolean", "label": "Clean", "defaultValue": "False", "required": false }
    ],
    "execution": {
        "ShellScript": {
            "target": "xcodebuild.sh",
            "argumentFormat": ""
        }
    }    
}