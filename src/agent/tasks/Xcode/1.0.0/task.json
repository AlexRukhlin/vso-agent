{
    "id": "1E78DC1B-9132-4B18-9C75-0E7ECC634B74",
    "name": "Xcode",
    "friendlyName": "Xcode Build",
    "description": "Build an Xcode project with xcodebuild tool",
    "category": "Build",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0,
        "IsTest": false
    },
    "demands" : [
        "xcode"
    ],
    "instanceNameFormat": "Xcode $(xcWorkspacePath)",
    "inputs": [
        { "name": "xcWorkspacePath", "propertyType": "filePath", "label": "Workspace Path", "defaultValue":"src/myproject.xcodeproject/project.xcworkspace", "required":true },
        { "name": "scheme", "propertyType": "string", "label": "Scheme", "defaultValue":"", "required":true }
        { "name": "xcodeApp", "propertyType": "string", "label": "Xcode App", "defaultValue":"$(XcodeApp)", "required":true }
        { "name": "configuration", "propertyType": "string", "label": "Configuration", "defaultValue":"$(Configuration)", "required":true }
        { "name": "sdk", "propertyType": "string", "label": "SDK", "defaultValue":"$(SDK)", "required":true }
        { "name": "output", "propertyType": "string", "label": "Scheme", "defaultValue":"output/$(SDK)/$(Configuration)", "required":true }
    ],
    "execution": {
        "handler": "ShellScript",
        "target": "xcodebuild.sh",
        "argumentFormat": ""
    }    
}